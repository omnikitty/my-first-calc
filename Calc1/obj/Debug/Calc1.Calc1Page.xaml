<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		xmlns:local="clr-namespace:Calc1" 
		x:Class="Calc1.Calc1Page" 
		xmlns:custom="clr=namespace:Calc1.Num">

<ContentPage.Resources>
		<ResourceDictionary>
			<Style x:Key="BaseStyle" TargetType="Button">
				<Setter Property="FontSize" Value="{x:Static local:Calc1Page.ButtonFontSize}" />
				<Setter Property="TextColor" Value="#ffffff" />
				<Setter Property="BorderWidth" Value="{x:Static local:Calc1Page.BorderWidth}" />
			</Style>
			
			<Style x:Key="NumStyle" TargetType="Button" BasedOn="{StaticResource BaseStyle}">
				<Setter Property="BorderColor" Value="#ffffff" />
				<Setter Property="BackgroundColor" Value="#ccc9b3" />
			</Style>
			
			<Style x:Key="OpStyle" TargetType="Button" BasedOn="{StaticResource BaseStyle}">
				<Setter Property="BorderColor" Value="#ffffff" />
				<Setter Property="BackgroundColor" Value="#558877" />
			</Style>

			<Style x:Key="MiscStyle" TargetType="Button" BasedOn="{StaticResource BaseStyle}">
				<Setter Property="FontSize" Value="{x:Static local:Calc1Page.MiscFontSize}" />
				<Setter Property="BorderColor" Value="#ffffff" />
				<Setter Property="BackgroundColor" Value="#114455" />
			</Style>


		
		</ResourceDictionary>
</ContentPage.Resources>


<RelativeLayout>
<Image Source="oceanfoam.jpg" Aspect="AspectFill"
	RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,
					Property=Height, Factor=0, Constant=0}"
	RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,
					Property=Width, Factor=0, Constant=0}"
	RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,
					Property=Height, Factor=1, Constant=0}"
	RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,
					Property=Width, Factor=1, Constant=0}"/>
					
<Grid ColumnSpacing="{x:Static local:Calc1Page.Spacing}" RowSpacing="{x:Static local:Calc1Page.Spacing}" Margin="{x:Static local:Calc1Page.GridMargin}">
	<Grid.RowDefinitions>
		<RowDefinition Height="*"/> 
		<RowDefinition Height="*"/>
		<RowDefinition Height="*"/>
		<RowDefinition Height="*"/>
		<RowDefinition Height="*"/>
		<RowDefinition Height="*"/>
		<RowDefinition Height="*"/>
	</Grid.RowDefinitions>

	<Grid.ColumnDefinitions>
		<ColumnDefinition Width="*"/>
		<ColumnDefinition Width="*"/>
		<ColumnDefinition Width="*"/>
		<ColumnDefinition Width="*"/>
	</Grid.ColumnDefinitions>

	<BoxView
		x:Name="buttonground"
		Grid.Row="2"
		Grid.RowSpan="5"
		Grid.Column="0"
		Grid.ColumnSpan="4"
		Opacity="0.5"
		Color="#ffffff">
	</BoxView>

	<BoxView
		x:Name="screenground"
		Grid.Row="0"
		Grid.RowSpan="2"
		Grid.Column="0"
		Grid.ColumnSpan="4"
		Opacity="0.75"
		Margin="0,35,0,3"
		Color="#ffffff">
	</BoxView>
		
	<Label
		x:Name="screen"
		Grid.Row="1"
		Grid.Column="0"
		Grid.ColumnSpan="4"
		HorizontalOptions="End"
		VerticalOptions="End"
		Margin="5,3"
		FontSize="{x:Static local:Calc1Page.ScreenFontSize}">
	</Label>

	<Label
		x:Name="history"
		Grid.Row="0"
		Grid.Column="0"
		Grid.ColumnSpan="4"
		HorizontalOptions="End"
		VerticalOptions="End"
		TextColor="#a3a3a3"
		Margin="5,0"
		FontSize="{x:Static local:Calc1Page.HistFontSize}">
	</Label>
			
</Grid>
</RelativeLayout>
	
</ContentPage>

